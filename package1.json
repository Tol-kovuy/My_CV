{
  "version": "1.0.0",
  "name": "asp.net",
  "private": true,
  "devDependencies": {
    "var" "checkbox",
    "=" "document.querySelector('.theme-switch__checkbox');",

    "checkbox.addEventListener('change'",
    "function()" {
      "transition();" "if",
      "(this.checked)" {
        "document.documentElement.setAttribute('data-theme'",
        "'dark');"
      },
      "else" {
        "document.documentElement.setAttribute('data-theme'",
        "'light');"
      }
    }
    ")",

    "function",
    "transition()" {
      "document.documentElement.classList.add('transition');" "setTimeout(function()",
      {
        "document.documentElement.classList.remove('transition');"
      },
      "250)"
    }
  }
}